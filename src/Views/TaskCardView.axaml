<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodel="clr-namespace:App.ViewModels"
             xmlns:views="clr-namespace:App.Views"
             x:Class="App.Views.TaskCardView"
             x:DataType="viewmodel:TaskCardViewModel">

    <Border Background="{Binding TaskColour, 
                         Converter={StaticResource StringToBrushConverter}}" 
            BorderBrush="Black" BorderThickness="1" CornerRadius="2"
            Margin="0,0,0,5" Padding="5" Height="80" 
            MinWidth="240" Width="220" MaxWidth="270">

        <Grid RowDefinitions="Auto, *">

            <!-- Title (No drag, editor open only) -->
            <TextBlock Text="{Binding TaskName}" FontWeight="Bold"
                       Foreground="{Binding TaskColour, Converter={StaticResource LuminanceTextFilter}}"
                       Cursor="Hand" PointerPressed="EditTask"
                       TextWrapping="Wrap" MaxWidth="220" TextTrimming="CharacterEllipsis"
                       MaxLines="2"/>

            <!-- Body (Drag only) -->
        <Border Grid.Row="2" Background="Transparent" PointerPressed="Task_PointerPressed">
        </Border>
        </Grid>

    </Border>

</UserControl>
