<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodel="clr-namespace:App.ViewModels"
             xmlns:views="clr-namespace:App.Views"
             x:Class="App.Views.BoardView"
             x:DataType="viewmodel:BoardViewModel"
             Background="magenta" Padding="10">

    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Horizontal" >

            <!-- 1.Render Columns -->
            <ItemsControl ItemsSource="{Binding Columns}"
                          DragDrop.AllowDrop="True"
                          DragDrop.DragOver="Columns_DragOver"
                          DragDrop.Drop="Columns_Drop">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:ColumnView />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- 2.Add Column Button -->
            <Button Content="Add Column" Margin="50"
                    Command="{Binding AddColumnCommand}"/>

        </StackPanel>
    </ScrollViewer>

</UserControl>


