<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:App.Models"
        xmlns:helpers="clr-namespace:App.Helpers"
        x:Class="App.Views.TaskPopup"
        x:DataType="models:TaskCard"
        Width="500"
        Height="500"
        Title="Task Details"
        WindowStartupLocation="CenterOwner"
        >

  <Window.Resources>
    <helpers:StringToBrushConverter x:Key="StringToBrush"/>
    <helpers:LuminanceTextFilter x:Key="LuminanceText"/>
  </Window.Resources>

  <StackPanel Margin="10" Spacing="10">
    
    <TextBlock Text="Task Title" FontWeight="Bold"/>
    <TextBox Text="{Binding TaskName, Mode=TwoWay}" Name="TitleBox"/>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="5">
      <ComboBox ItemsSource="{Binding AvailableColours}" 
                SelectedItem="{Binding TaskColour, Mode=TwoWay}"/>
      <Button Content="Save" Click="Save_Click"/>
      <Button Content="Cancel" Click="Cancel_Click"/>
    </StackPanel>

  </StackPanel>

</Window>
